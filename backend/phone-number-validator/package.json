{
	"name": "phone-number-validator",
	"description": "Phone number verification extension for Directus using Vonage SMS",
	"icon": "phone",
	"version": "1.0.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-endpoint",
		"phone-verification",
		"otp",
		"sms"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "endpoint",
		"path": "dist/index.js",
		"source": "src/index.ts",
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate"
	},
	"dependencies": {
		"@vonage/server-sdk": "^3.15.0",
		"axios": "^1.6.0",
		"phone": "^3.1.50",
		"nanoid": "^5.0.4",
		"ms": "^2.1.3"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "17.0.0",
		"@types/node": "^24.10.0",
		"@types/ms": "^0.7.34",
		"typescript": "^5.9.3"
	}
}
